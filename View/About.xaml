<Window x:Class="StdEqpTesting.View.About"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:StdEqpTesting.View"
		mc:Ignorable="d"
		Title="About"
		Height="150"
		Width="300"
		Background="#1E1E1E"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterOwner"
		WindowStyle="ToolWindow">
	<Window.Resources>
		<Style TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground"
					Value="WhiteSmoke" />
			<Setter Property="HorizontalAlignment"
					Value="Center" />
		</Style>
	</Window.Resources>
	<Border BorderBrush="Gray" BorderThickness="5,0,5,5">
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<TextBlock Text="Multi-Purpose Master Computer"
					   FontWeight="Bold"
					   MouseRightButtonUp="TextBlock_MouseRightButtonUp"
					   FontSize="15" />
			<TextBlock Text="Victor's Graduate Project"
					   FontStyle="Italic" />
			<TextBlock Margin="0,10,0,0">
			<Hyperlink NavigateUri="https://github.com/ChiNoel-osu/StdEqpTestingApp"
					   RequestNavigate="Hyperlink_RequestNavigate">GitHub Repository</Hyperlink>
			</TextBlock>
		</StackPanel>
	</Border>
</Window>